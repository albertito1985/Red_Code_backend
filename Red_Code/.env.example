# Database Configuration
DB_SERVER=(localdb)\\mssqllocaldb
DB_NAME=RedCodeDb
DB_TRUSTED_CONNECTION=True
DB_MULTIPLE_ACTIVE_RESULT_SETS=true
DB_TRUST_SERVER_CERTIFICATE=True

# Azure AD Configuration
AZURE_AD_INSTANCE=https://login.microsoftonline.com/
AZURE_AD_DOMAIN=your-domain.onmicrosoft.com
AZURE_AD_TENANT_ID=your-tenant-id-here
AZURE_AD_CLIENT_ID=your-client-id-here
AZURE_AD_SCOPES=access_as_user
AZURE_AD_CALLBACK_PATH=/signin-oidc

# Logging Configuration
LOG_LEVEL_DEFAULT=Information
LOG_LEVEL_ASPNETCORE=Warning
LOG_LEVEL_EF_DATABASE_COMMAND=Information

# Allowed Hosts
ALLOWED_HOSTS=*

# Environment
ASPNETCORE_ENVIRONMENT=Development
